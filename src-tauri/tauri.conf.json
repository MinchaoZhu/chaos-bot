{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "chaos-bot",
  "version": "0.1.0",
  "identifier": "com.chaosbot.desktop",
  "build": {
    "beforeDevCommand": "npm --prefix ../frontend-react run dev",
    "beforeBuildCommand": "npm --prefix ../frontend-react run build",
    "devUrl": "http://127.0.0.1:1420",
    "frontendDist": "../frontend-react/dist"
  },
  "app": {
    "windows": [
      {
        "title": "chaos-bot",
        "label": "main",
        "width": 1280,
        "height": 840,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}
