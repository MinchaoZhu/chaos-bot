{
  "workspace": ".chaos-bot",
  "server": {
    "host": "0.0.0.0",
    "port": 3000
  },
  "llm": {
    "provider": "openai",
    "model": "gpt-4o-mini",
    "temperature": 0.2,
    "max_tokens": 1024,
    "max_iterations": 6,
    "token_budget": 12000
  },
  "channels": {
    "telegram": {
      "enabled": false,
      "polling": false,
      "api_base_url": "https://api.telegram.org"
    }
  },
  "logging": {
    "level": "info",
    "retention_days": 7,
    "directory": "logs"
  },
  "secrets": {}
}
